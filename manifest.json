{
  "manifest_version": 3,
  "name": "Path-To-Anime",
  "version": "1.0",
  "description": "Search anime and get personalized recommendations",
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "background"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "web_accessible_resources": [
    {
      "resources": [
        "search.html",
        "recommend.html",
        "help.html",
        "styles/*",
        "scripts/*",
        "images/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
  
}